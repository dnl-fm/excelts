{
  "name": "excelts",
  "version": "5.0.0",
  "description": "Excel Workbook Manager - Bun-first TypeScript fork of ExcelJS for XLSX and CSV.",
  "private": true,
  "type": "module",
  "license": "MIT",
  "author": {
    "name": "Guyon Roche",
    "email": "guyon@live.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dnl-fm/excelts.git"
  },
  "engines": {
    "bun": ">=1.3.0"
  },
  "packageManager": "bun@1.3.4",
  "main": "./src/excelts.nodejs.ts",
  "module": "./src/excelts.nodejs.ts",
  "browser": "./dist/excelts.min.js",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "import": "./src/excelts.nodejs.ts",
      "types": "./index.d.ts"
    },
    "./browser": {
      "import": "./dist/excelts.min.js"
    }
  },
  "files": [
    "dist",
    "src",
    "LICENSE",
    "README.md",
    "README_zh.md",
    "index.d.ts"
  ],
  "scripts": {
    "build": "bun run clean && bun run build:browser && bun run build:browser:min && bun run build:bare && bun run build:bare:min && bun run build:license",
    "build:browser": "bun build --target=browser --format=iife --sourcemap=linked --outdir=dist --entry-naming=excelts.js src/excelts.browser.ts",
    "build:browser:min": "bun build --target=browser --format=iife --sourcemap=linked --minify --outdir=dist --entry-naming=excelts.min.js src/excelts.browser.ts",
    "build:bare": "bun build --target=browser --format=iife --sourcemap=linked --outdir=dist --entry-naming=excelts.bare.js src/excelts.bare.ts",
    "build:bare:min": "bun build --target=browser --format=iife --sourcemap=linked --minify --outdir=dist --entry-naming=excelts.bare.min.js src/excelts.bare.ts",
    "build:license": "mkdir -p dist && cp LICENSE dist/LICENSE",
    "clean": "rm -rf dist",
    "lint": "oxlint --config oxlint.json --deny-warnings --ignore-path .gitignore src tests",
    "format": "oxfmt --check .",
    "format:write": "oxfmt .",
    "test": "bun run test:full",
    "test:full": "bun run build && bun run test:unit && bun run test:integration && bun run test:end-to-end && bun run test:browser && bun run test:dist && bun run test:typescript",
    "test:unit": "bun test tests/unit --timeout 20000",
    "test:integration": "bun test tests/integration --timeout 20000",
    "test:end-to-end": "bun test tests/end-to-end --timeout 20000",
    "test:browser": "bun test tests/browser --timeout 20000",
    "test:dist": "bun test tests/dist --timeout 20000",
    "test:typescript": "bun test tests/typescript --timeout 20000",
    "benchmark": "bun --expose-gc benchmark.ts",
    "benchmark:debug": "bun --expose-gc --inspect-brk benchmark.ts"
  },
  "keywords": [
    "xlsx",
    "json",
    "csv",
    "excel",
    "font",
    "border",
    "fill",
    "number",
    "format",
    "number format",
    "alignment",
    "office",
    "spreadsheet",
    "workbook",
    "defined names",
    "data validations",
    "rich text",
    "in-cell format",
    "outlineLevel",
    "views",
    "frozen",
    "split",
    "pageSetup"
  ],
  "dependencies": {
    "archiver": "^5.3.2",
    "dayjs": "^1.11.19",
    "fast-csv": "^4.3.6",
    "jszip": "^3.10.1",
    "readable-stream": "^3.6.2",
    "saxes": "^5.0.1",
    "tmp": "^0.2.5",
    "unzipper": "^0.10.14",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "express": "^4.22.1",
    "oxfmt": "^0.21.0",
    "oxlint": "^1.37.0",
    "typescript": "^5.9.3"
  }
}
