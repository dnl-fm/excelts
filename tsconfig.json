{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "sourceMap": true,
    "types": ["bun-types", "bun-types/test-globals"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": false,
    "noImplicitAny": false
  },
  "include": [
    "src/**/*.ts",
    "index.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
